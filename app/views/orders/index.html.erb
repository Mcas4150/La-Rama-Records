<div class="container">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
            <div class="card-header" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= cl_image_path(order.record.photo.path) %>); height: 300px; width : 300px; padding: 10px;">
            </div>
          <div class="card-body poopy">
            <h1><%= order.record.name %></h1>
            <p>Artist: <%= order.record.artist %></p>
            <p>Price: $<%= order.record.price %></p>
            <p>Buyer: <%= current_user.first_name %></p>
            <p>Ordered for: <%= order.from.to_s %></p>
            <p>Return on: <%= order.to.to_s %></p>
            <%= link_to 'Delete', order_path(order), method: :delete  %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Back to Records', records_path %>
</div>


