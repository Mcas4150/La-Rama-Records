<div class="banner" style="background-image: linear-gradient( 50deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 0%), url('http://www.theguideliverpool.com/wp-content/uploads/2017/04/tumblr_static_vinyl_collection-e1454556697531.jpg');">
  <div class="banner-content">
    <h1>Vinyl</h1>
    <p>Buy/Sell</p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>
<h1 class="text-center">Records for sale</h1>



<div class="container">
  <div class="row">
    <% @records.each do |record| %>
      <div class="col-sm-4">

          <% if record.photo? %>
            <div class="card text-center" style="background-image: url(<%= cl_image_path(record.photo.path) %>); height: 250px; width: 100%; padding: 10px;">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url(http://design-ec.com/d/e_others_50/l_e_others_500.png); height: 200px;">
            </div>
          <% end %>
          <div class="card-body text-center" style="font-size:30px;">
            <%= link_to record.name, record_path(record) %>
            <%= link_to record.artist, record_path(record) %>
            $<%= link_to record.price, record_path(record) %>
          </div>

      </div>
    <% end %>
  </div>
</div>

<div class="text-center padded">
  <%= link_to "Add a Record", new_record_path, class: "btn btn-primary" %>
</div>



