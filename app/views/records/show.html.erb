<div class="container">

  <div class="row">
      <div class="card col-xs-12 col-sm-4" style="max-width: 350px; "><img  id="myImg" src= '<%= @record.photo %>' style= "height: 100%; width: 100%; margin-bottom: 10px;" >

          <div id="myModal" class="modal">

  <!-- The Close Button -->
  <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>

  <!-- Modal Content (The Image) -->
  <img class="modal-content" id="img01" style="border-radius: 10px;">

  <!-- Modal Caption (Image Text) -->
  <div id="caption"></div>
</div>

    </div>

      <div class="card-contents col-xs-12 col-sm-3" style = "display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    margin-left: 20px;">
        <h1><%= @record.name %></h1>
        <p>Artist: <%= @record.artist %></p>
        <p>Label: <%= @record.label %></p>
        <p>Catno: <%= @record.catno %></p>
        <p>Country: <%= @record.country %></p>
        <p>Year: <%= @record.year %></p>
        <p>Genre: <%= @record.genre  %></p>



     </div>

<div class="card-contents col-xs-12 col-sm-3 col-lg-4" style = "display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin:10px;">
         <table>
              <% reality = @discogs.get_release(@record.release_id)%>



            <% reality["tracklist"].each do |track|%>
          <tr style="text-align: center;">

            <td>
              <%= track["position"] rescue nil %>
            </td>
             <td>
              <%= track["title"] rescue nil %>
            </td>


          </tr>
              <% end %>
        </table>

        <div class="row">

            <div class="col-3">
            <span style="font-size: 30px;"><%= link_to 'Back', records_path %></span>
            </div>
            <div class="col-3">
              <%= form_tag crate_records_path do %>
                        <%= hidden_field_tag 'record_id', @record.id %>
                        <%= submit_tag 'Add to Cart', class: 'btn btn-cool' %>
                      <% end %>
            </div>

            <div class="col-3">
                <span style="font-size:30px;"> <%= humanized_money_with_symbol(@record.price_cents) %></span>
            </div>
            </div>

        </div>


     <div class="col-xs-12 col-sm-8" id="player"></div>

    <script>
      // 2. This code loads the IFrame Player API code asynchronously.
      var tag = document.createElement('script');

      tag.src = "https://www.youtube.com/iframe_api";
      var firstScriptTag = document.getElementsByTagName('script')[0];
      firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

      // 3. This function creates an <iframe> (and YouTube player)
      //    after the API code downloads.
      var player;
      function onYouTubeIframeAPIReady() {
        player = new YT.Player('player', {
          height: '390',
          width: '',
          videoId:  '<%= @record.youtubeid.partition('=').last rescue nil%>',
          events: {
            'onReady': onPlayerReady,
            'onStateChange': onPlayerStateChange
          }
        });
      }

      // 4. The API will call this function when the video player is ready.
      function onPlayerReady(event) {
        event.target.playVideo();
      }

      // 5. The API calls this function when the player's state changes.
      //    The function indicates that when playing a video (state=1),
      //    the player should play for six seconds and then stop.
      var done = false;
      function onPlayerStateChange(event) {
        if (event.data == YT.PlayerState.PLAYING && !done) {
          setTimeout(stopVideo, 6000);
          done = true;
        }
      }
      // function stopVideo() {
      //   player.stopVideo();
      // }
    </script>


  </div>


</div>



</div>
