<strong>Listings</strong><%= @listings.count %>




<div class="records-display">

<% @listings.each do |t| %>
  <div>
    <% @release_id = t.release["id"] %>
 <a href='/records/<%=@release_id%>'>
  <div>

  <img src = '<%= t.release["thumbnail"] %>'  style= "height: 250px; width: 250px;">
   </div>
  <div class="card-body" style="font-size:30px;">
    <p><%= t.release["description"] %></p>
  <p><%= t.release["resource_url"] %></p>
  <p><%= t.comments %></p>
  <h2><%= humanized_money_with_symbol(t.original_price['value']) %></h2>

  </div>
  </a>
  </div>

<% end %>
</div>
