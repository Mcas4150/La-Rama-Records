<div class="banner" style="background-image: linear-gradient( 50deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 0%), url('http://www.recordindustry.com/images/background2.jpg');">
  <div class="banner-content">
    <h1>Rekkids</h1>
    <p>Buy/Sell Vinyl</p>
   <%= image_tag "recordman.jpg", width: "80", class: "jump"%>
  </div>
</div>




  <div class="records-display">
    <% @records.each do |record| %>
      <div>
        <%= link_to record_path(record) do %>
          <% if record.photo? %>
            <div class="card" style="background-image: url(<%= cl_image_path(record.photo.path) %>);">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url(http://design-ec.com/d/e_others_50/l_e_others_500.png); height: 200px;">
            </div>
          <% end %>
          <div class="card-body" style="font-size:30px;">
            <p><%= record.artist %></p>
            <h2><%= record.name %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

<div class="text-center padded">
  <%= link_to "Add a Record", new_record_path, class: "btn btn-primary" %>
</div>


