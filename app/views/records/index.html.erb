<div class="banner" style="background-image: linear-gradient( 50deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 0%), url('http://www.recordindustry.com/images/background2.jpg');">
  <div class="banner-content">
    <h1>Rekkids</h1>
    <p>Buy/Sell Vinyl</p>
   <%= image_tag "recordman.jpg", width: "80", class: "jump"%>
  </div>
</div>
<h1 class="text-center">Records for sale</h1>



<div class="container">
  <div class="row">
    <% @records.each do |record| %>
      <div class="col-sm-4">

          <% if record.photo? %>
            <div class="card text-center" style="background-image: url(<%= cl_image_path(record.photo.path) %>); height: 350px; width: 350px; padding: 10px;">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url(http://design-ec.com/d/e_others_50/l_e_others_500.png); height: 200px;">
            </div>
          <% end %>
          <div class="card-body text-center" style="font-size:30px;">
            <ul>
            <h2><%= link_to record.name, record_path(record) %></h2>
            <p><%= link_to record.artist, record_path(record) %></p>
            </ul>
          </div>

      </div>
    <% end %>
  </div>
</div>

<div class="text-center padded">
  <%= link_to "Add a Record", new_record_path, class: "btn btn-primary" %>
</div>


