<div class="banner" style="background-image: linear-gradient( 50deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 0%), url('RecordsBackground.jpeg');">
  <div class="banner-content">
    <h1>Vinyl</h1>
    <p>Buy/Sell</p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>
<h1 class="text-center">Records for sale</h1>

<div class="text-center padded">
  <%= link_to "Add a Record", new_record_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @records.each do |record| %>
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card text-center">
          <% if record.photo? %>
            <div class="card-header" style="background-image: url(<%= cl_image_path(record.photo) %>); height: 200px;">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url(); height: 200px;">
            </div>
          <% end %>
          <div class="card-body">
            <%= link_to record.name, record_path(record) %>
            <%= link_to record.artist, record_path(record) %>
            <%= link_to record.price, record_path(record) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




