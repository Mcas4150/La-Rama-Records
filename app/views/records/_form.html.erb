
<%= simple_form_for(@record) do |f| %>

    <%= f.input_field :name, placeholder: "title" %>
    <br/>
    <%= f.input_field :artist, placeholder: "artist"%>
    <br/>
    <%= f.input_field :price, placeholder: "price"%>
    <br/>
    <%= f.input_field :description, placeholder: "description" %>
    <br/>
    <%= f.input_field :photo, as: :attachinary %>
    <br/>
    <%= f.button :submit, class: "btn btn-cool"  %>
<% end %>
