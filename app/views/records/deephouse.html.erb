    <div class="overlay2">
       <div class='text yells' style="height: 20px; width: 100px; opacity:1; font-size: 1em; display:flex; flex-direction: row; justify-content: center; align-items: flex-end;"><%=humanized_money_with_symbol(record.price_cents)%></div>
    </div>
   </div>
